<div style="max-width: 400px; margin: 50px auto; text-align: center; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
  <h2 style="margin-bottom: 20px; font-size: 24px; color: #333;">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <!-- แสดงข้อความ Error -->
    <div style="color: red; margin-bottom: 20px;">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <!-- Email Field -->
    <div class="field" style="margin-bottom: 20px; text-align: left;">
      <%= f.label :email, "Email Address", style: "font-weight: bold;" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>

    <!-- Submit Button -->
    <div class="actions" style="margin-top: 20px;">
      <%= f.submit "Send Reset Instructions", class: "btn btn-primary", style: "padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
  <% end %>

  <!-- Link to other Devise Pages -->
  <div style="margin-top: 20px; font-size: 14px; color: #555;">
    <%= render "devise/shared/links" %>
  </div>
</div>
