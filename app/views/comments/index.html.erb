<div class="container my-5">
  <!-- Display notice -->
  <% if notice %>
    <div class="alert alert-success text-center" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% content_for :title, "Comments" %>

  <!-- Title -->
  <h1 class="text-center mb-4">Comments</h1>

  <!-- Comments Section -->
  <div id="comments" class="list-group">
    <% if @comments.any? %>
      <% @comments.each do |comment| %>
        <div class="list-group-item list-group-item-action mb-3 shadow-sm p-3 rounded">
          <%= render comment %>
          <div class="mt-3 text-end">
            <%= link_to "Show this comment", comment, class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-muted text-center">No comments available.</p>
    <% end %>
  </div>

  <!-- New Comment Button -->
  <div class="text-center mt-4">
    <%= link_to "Add New Comment", new_comment_path, class: "btn btn-success" %>
  </div>
</div>
