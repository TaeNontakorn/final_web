<div class="container my-5">
  <!-- Display notice -->
  <% if notice %>
    <div class="alert alert-success text-center" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <!-- Render Comment -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <%= render @comment %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="d-flex justify-content-between">
    <!-- Edit Button -->
    <%= link_to "Edit this comment", edit_comment_path(@comment), class: "btn btn-warning" %>
    
    <!-- Back to Comments Button -->
    <%= link_to "Back to comments", comments_path, class: "btn btn-primary" %>
    
    <!-- Destroy Button -->
    <%= button_to "Destroy this comment", @comment, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
